# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_USER=connexly
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=whatsapp_connexly_prod

# Redis Configuration
REDIS_URL=redis://redis:6379

# NextAuth Configuration
NEXTAUTH_URL=https://connexly.digitalfootprint.cloud
NEXTAUTH_SECRET=your_very_long_random_secret_key_here

# WhatsApp Business API Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
WHATSAPP_CONFIG_ID=your_whatsapp_config_id

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Pusher Configuration (if using real-time features)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# File Storage (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Email Configuration (if using email services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
CORS_ORIGIN=https://connexly.digitalfootprint.cloud
