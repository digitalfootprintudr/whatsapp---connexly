{
  "name": "whatsapp-connexly",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter web start",
    "lint": "pnpm -r lint",
    "format": "prettier -w .",
    "typecheck": "pnpm -r typecheck",
    "db:generate": "pnpm --filter @whatsjet/db prisma generate",
    "db:migrate": "pnpm --filter @whatsjet/db prisma migrate dev",
    "db:deploy": "pnpm --filter @whatsjet/db prisma migrate deploy"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "pnpm": {
    "packages": {
      "apps/*": {},
      "packages/*": {},
      "services/*": {}
    }
  }
}

